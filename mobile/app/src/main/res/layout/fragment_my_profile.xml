<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myProfile.MyProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <ImageView
            android:id="@+id/my_profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="17dp"
            android:background="@drawable/shape_img_view_border"
            android:contentDescription="@string/profile_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/followers_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="11dp"
            android:text="@string/followers"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/my_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_profile_num_followers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/followers_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/followers_lbl"
            app:layout_constraintTop_toTopOf="@+id/followers_lbl" />

        <TextView
            android:id="@+id/following_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:text="@string/following"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/my_profile_image"
            app:layout_constraintTop_toBottomOf="@id/followers_lbl" />

        <TextView
            android:id="@+id/my_profile_num_following"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/following_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/following_lbl"
            app:layout_constraintTop_toTopOf="@+id/following_lbl" />

        <TextView
            android:id="@+id/name_lbl"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="@string/name"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_profile_image" />

        <TextView
            android:id="@+id/my_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_lbl"
            app:layout_constraintTop_toTopOf="@+id/name_lbl" />

        <TextView
            android:id="@+id/gender_lbl"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="@string/gender"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_lbl" />

        <TextView
            android:id="@+id/my_profile_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/not_defined"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/gender_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gender_lbl"
            app:layout_constraintTop_toTopOf="@+id/gender_lbl" />

        <TextView
            android:id="@+id/country_lbl"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="@string/country"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_lbl" />

        <TextView
            android:id="@+id/my_profile_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/not_defined"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/country_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/country_lbl"
            app:layout_constraintTop_toTopOf="@+id/country_lbl" />

        <TextView
            android:id="@+id/date_of_birth_lbl"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="@string/date_of_birth"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_lbl" />

        <TextView
            android:id="@+id/my_profile_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/not_defined"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/date_of_birth_lbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_of_birth_lbl"
            app:layout_constraintTop_toTopOf="@+id/date_of_birth_lbl" />

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_dark_green_background"
            android:text="@string/edit_profile"
            android:textColor="@color/colorWhiteText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth_lbl" />

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_light_grey_background"
            android:text="@string/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
